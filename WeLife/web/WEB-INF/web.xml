<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Diary_handle</servlet-name>
        <servlet-class>edu.jlxy.Servlet.Diary_handle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendDynamic_handle</servlet-name>
        <servlet-class>edu.jlxy.Servlet.SendDynamic_handle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>edu.jlxy.Servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDiary</servlet-name>
        <servlet-class>edu.jlxy.Servlet.DeleteDiary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>edu.jlxy.Servlet.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Diary_handle</servlet-name>
        <url-pattern>/Diary_handle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendDynamic_handle</servlet-name>
        <url-pattern>/SendDynamic_handle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDiary</servlet-name>
        <url-pattern>/DeleteDiary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/UploadServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
